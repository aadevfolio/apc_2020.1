	Description: Receber três numeros inteiros e seus pesos e mostrar a média
*/

#include <stdio.h>

int main(){
	int n1, n2, n3;
	int p1, p2, p3;
	int soma;
	float media = 0;
	
	
	printf("Numero 1: ");
	scanf("%d", &n1);
	getchar();
	printf("Peso 1: ");
	scanf("%d", &p1);
	getchar();
	
	printf("Numero 2: ");
	scanf("%d", &n2);
	getchar();
	printf("Peso 2: ");
	scanf("%d", &p2);
	getchar();
	
	printf("Numero 3: ");
	scanf("%d", &n3);
	getchar();
	printf("Peso 3: ");
	scanf("%d", &p3);
	getchar();
	
	soma = p1 + p2 + p3;
	
	media = (n1 + n2 + n3 + p1 + p2 + p3) / soma;
	
	printf("Media ponderada: %f\n", media);
	
	return 0;
}
